<p id="notice"><%= notice %></p>

<h1>Listing Class Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th>Entry at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_rooms.each do |class_room| %>
      <tr>
        <td><%= class_room.student.name %></td>
        <td><%= class_room.course.name %></td>
        <td><%= class_room.entry_at %></td>
        <td><%= link_to 'Show', class_room, :class => "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_class_room_path(class_room) ,:class => "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', class_room, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Class room', new_class_room_path, :class => "btn btn-primary"%>
